<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_progress_indicator"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/back_black_smoke"
    android:padding="8dp" >

    <ProgressBar
        android:id="@+id/prg_inidcator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txt_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prg_inidcator"
        android:layout_alignLeft="@id/prg_inidcator"
        android:layout_alignRight="@id/prg_inidcator"
        android:layout_alignTop="@id/prg_inidcator"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/progress_countdown"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/prg_inidcator"
        android:ellipsize="end"
        android:maxLines="2"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/progress_message"
        android:textColor="@android:color/primary_text_dark" />

</RelativeLayout>